<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.giaodichnhadat.presentation.MainGiaoDIchUI">
    <VBox prefHeight="536.0" prefWidth="864.0" spacing="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
      <HBox prefHeight="29.0" prefWidth="843.0">
         <children>
            <TextField fx:id="txtField" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="213.0" promptText="Tìm Kiếm" />
            <Button id="btnTim" fx:id="btnTim" mnemonicParsing="false" prefHeight="26.0" prefWidth="86.0" text="Tìm kiếm" onAction="#handleTim"/>
         </children>
      </HBox>

        <!-- Các nút chức năng (canh phải) -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="btnThem" prefHeight="26.0" prefWidth="114.0" text="Thêm giao dịch" />
            <Button fx:id="btnXoa" onAction="#handleXoa"  text="Xoá giao dịch"/>
            <Button fx:id="btnSua" onAction="#handleSua" text="Sửa giao dịch" />
            <Button fx:id="btnTongSoLuong" text="Tổng số lượng giao dịch" />
            <Button fx:id="btnTrungBinh" text="Trung bình thành tiền" />
            <Button fx:id="btnXuat" text="Xuất giao dịch" />
            <Button fx:id="btnDong" text="Đóng chương trình" />
        </HBox>

        <!-- Bảng hiển thị danh sách giao dịch -->
        <TableView fx:id="tableView" prefHeight="437.0" prefWidth="843.0">
            <columns>
                <TableColumn fx:id="colMa" prefWidth="107.2" text="Mã giao dịch" />
                <TableColumn fx:id="colLoaiGiaoDich" prefWidth="98.4" text="Loại giao dịch" />
                <TableColumn fx:id="colLoai" prefWidth="96.8" text="Loại " />
                <TableColumn fx:id="colDiaChi" prefWidth="118.4" text="Địa chỉ " />
                <TableColumn fx:id="colNgayGiaoDich" prefWidth="118.4" text="Ngày Giao Dịch" />
                <TableColumn fx:id="colDonGia" prefWidth="81.6" text="Đơn giá" />
                <TableColumn fx:id="colDienTich" prefWidth="100" text="Diện tích" />
                <TableColumn fx:id="colThanhTien" prefWidth="120" text="Thành tiền" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>